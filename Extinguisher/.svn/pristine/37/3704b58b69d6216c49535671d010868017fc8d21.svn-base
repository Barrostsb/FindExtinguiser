package pessoa;
import java.util.Scanner;

public class Pessoa {
	public String nome;
	
	public int codigo; //codigo será unico para cada pessoa e noa poderá ser mudado
	
	public Pessoa(){
		
	}
	
	public void cadastrarPessoa(){
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Informe o nome :  ");
		nome = sc.nextLine();

		System.out.println("Informe o codigo :  "); //Podemos fazer auto incremental no banco de dados
		codigo =sc.nextInt();
		
	}
}